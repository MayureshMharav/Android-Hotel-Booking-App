<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c3">

    <!-- ===== TOP CURVED HEADER ===== -->
    <FrameLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@android:color/transparent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_gravity="top"
            android:scaleType="centerCrop"
            android:background="@drawable/top_arc" />

        <ImageButton
            android:id="@+id/Fav_RTN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/grid_button_bg"
            android:backgroundTint="@color/c3"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_empty_fav"
            android:layout_marginLeft="175dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ratan's Hotel"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="#A8F7FF"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="70dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Room Types"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#A8F7FF"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="130dp"/>

    </FrameLayout>


    <!-- ===== GRID BUTTONS ===== -->
    <GridLayout
        android:id="@+id/grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header"
        android:layout_marginTop="90dp"
        android:columnCount="2"
        android:padding="20dp">

        <Button
            android:id="@+id/single_bed_btn"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:backgroundTint="@color/c5"
            android:text="Single Bed"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <!-- Button 2 -->
        <Button
            android:id="@+id/double_bed_btn"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:backgroundTint="@color/c5"
            android:text="Double Bed"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <!-- Button 3 -->
        <Button
            android:id="@+id/pool_btn"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:backgroundTint="@color/c5"
            android:text="With Pool"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <!-- Button 4 -->
        <Button
            android:id="@+id/lux_btn"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:backgroundTint="@color/c5"
            android:text="Luxury"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"/>
    </GridLayout>


    <!-- ===== BOTTOM NAV BAR ===== -->

    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:background="@drawable/bottom_nav_bg"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="12dp">

        <ImageButton
            android:id="@+id/ratans_back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:backgroundTint="@color/c3"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_back"/>

        <ImageButton
            android:id="@+id/ratans_home_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:backgroundTint="@color/c3"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_home"/>

    </LinearLayout>

</RelativeLayout>
