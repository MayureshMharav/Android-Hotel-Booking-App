<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@android:color/transparent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_gravity="top"
                android:scaleType="centerCrop"
                android:background="@drawable/top_arc" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="INVOICE"
                android:textColor="@color/c3"
                android:textSize="40sp"
                android:layout_gravity="center"/>
        </FrameLayout>

        <!-- Title -->
        <TextView
            android:id="@+id/tvSelectDates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select date's"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/c5"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="20dp"/>

        <!-- Date Selection -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="20dp">

            <Button
                android:id="@+id/checkin_date"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="From ðŸ“…"
                android:textColor="@color/c3"
                android:backgroundTint="@color/c5"
                android:layout_marginEnd="20dp" />

            <Button
                android:id="@+id/checkout_date"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="To ðŸ“…"
                android:textColor="@color/c3"
                android:backgroundTint="@color/c5"/>
        </LinearLayout>

        <!-- Room Image -->
        <ImageView
            android:id="@+id/Invoice_img"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#9E9E9E"
            android:scaleType="centerCrop"
            android:contentDescription="Room Image"
            android:layout_marginBottom="16dp" />

        <!-- Description -->
        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="You are booking  "
            android:textColor="@color/black"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginBottom="12dp" />

        <TextView
            android:id="@+id/tvDays"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="for "
            android:textColor="@color/black"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginBottom="12dp" />

        <!-- Amount -->
        <TextView
            android:id="@+id/tvAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="To Pay â‚¹ "
            android:textColor="#0A7D00"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="20dp" />

        <!-- Payment Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payment method's"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_marginBottom="12dp" />

        <!-- Payment Methods -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="20dp">

            <ImageButton
                android:id="@+id/imgPay1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@color/c5"
                android:contentDescription="GPay"
                android:layout_margin="6dp" />

            <ImageButton
                android:id="@+id/imgPay2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@color/c5"
                android:contentDescription="PhonePe"
                android:layout_margin="6dp" />

            <ImageButton
                android:id="@+id/imgPay3"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@color/c5"
                android:contentDescription="Paytm"
                android:layout_margin="6dp" />

            <ImageButton
                android:id="@+id/btnConfirmBooking"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@color/c5"
                android:layout_margin="6dp" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>
